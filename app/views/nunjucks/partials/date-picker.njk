<form class="" action="/book/{{ room._id }}" method="post">
    <div class="form-group {% if errors.date %}form-group-error{% endif %} date-picker">
        <fieldset>
            <legend>
                <span class="form-label-bold">
                    Date
                </span>
                <span class="error-message">{{ errors.date.msg }}</span>
            </legend>
            <div class="form-date">
                <div class="form-group form-group-day">
                    <label class="form-label" for="datePickerDay">Day</label>
                    <input class="form-control" id="datePickerDay" name="dob-day" type="number" pattern="[0-9]*" min="0" max="31">
                </div>
                <div class="form-group form-group-month">
                    <label class="form-label" for="datePickerMonth">Month</label>
                    <input class="form-control" id="datePickerMonth" name="dob-month" type="number" pattern="[0-9]*" min="0" max="12">
                </div>
                <div class="form-group form-group-year">
                    <label class="form-label" for="datePickerYear">Year</label>
                    <input class="form-control" id="datePickerYear" name="dob-year" type="number" pattern="[0-9]*" min="0" max="2016">
                </div>
            </div>
            <input id="changeDate" type="submit" class="button date-picker-submit" name="changeDate" value="Change date">
        </fieldset>
    </div>
</form>
